# YubiKey GPG agent for SSH authentication
IdentityAgent {{ .chezmoi.homeDir }}/.gnupg/S.gpg-agent.ssh

# Git services
Host github.com
    HostName github.com
    User git
    IdentityFile ~/.ssh/id_rsa_yubikey.pub
    IdentitiesOnly yes

Host gitlab.com
    HostName gitlab.com
    User git
    IdentityFile ~/.ssh/id_rsa_yubikey.pub
    IdentitiesOnly yes

# Personal servers
Host box.yeaw.me
    User root
    IdentityFile ~/.ssh/id_rsa_yubikey.pub

Host *
    AddKeysToAgent yes
